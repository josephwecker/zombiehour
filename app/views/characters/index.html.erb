<h2>Listing characters</h2>

<table>
  <tr>
    <th>User</th>
    <th>Name</th>
    <th>Gold</th>
    <th>Inventory</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @characters.each do |character| %>
  <tr>
    <td><%= character.user %></td>
    <td><%= character.name %></td>
    <td><%= character.gold %></td>
    <td><%= character.inventory %></td>
    <td><%= link_to 'Show', character %></td>
    <td><%= link_to 'Edit', edit_character_path(character) %></td>
    <td><%= link_to 'Destroy', character, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

