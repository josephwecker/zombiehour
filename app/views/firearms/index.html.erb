<h1>Listing firearms</h1>

<table>
  <tr>
    <th>Fire damage base</th>
    <th>Fire damage range</th>
    <th>Rate of fire</th>
    <th>Clip type</th>
    <th>Ammo type</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @firearms.each do |firearm| %>
  <tr>
    <td><%= firearm.fire_damage_base %></td>
    <td><%= firearm.fire_damage_range %></td>
    <td><%= firearm.rate_of_fire %></td>
    <td><%= firearm.clip_type %></td>
    <td><%= firearm.ammo_type %></td>
    <td><%= link_to 'Show', firearm %></td>
    <td><%= link_to 'Edit', edit_firearm_path(firearm) %></td>
    <td><%= link_to 'Destroy', firearm, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

