<h1>Listing weapons</h1>

<table>
  <tr>
    <th>Damage base</th>
    <th>Damage range</th>
    <th>Damage type</th>
    <th>Strength</th>
    <th>Control</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @weapons.each do |weapon| %>
  <tr>
    <td><%= weapon.damage_base %></td>
    <td><%= weapon.damage_range %></td>
    <td><%= weapon.damage_type %></td>
    <td><%= weapon.strength %></td>
    <td><%= weapon.control %></td>
    <td><%= link_to 'Show', weapon %></td>
    <td><%= link_to 'Edit', edit_weapon_path(weapon) %></td>
    <td><%= link_to 'Destroy', weapon, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Weapon', new_weapon_path %>
