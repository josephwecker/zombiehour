<h2>Listing cities</h2>

<table>
  <tr>
    <th>Name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @cities.each do |city| %>
  <tr>
    <td><%= city.name %></td>
    <td><%= link_to 'Show', admin_city_path(city) %></td>
    <td><%= link_to 'Edit', edit_admin_city_path(city) %></td>
    <td><%= link_to 'Destroy', admin_city_path(city), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

